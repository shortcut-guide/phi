---
// frontend/src/components/SlideMenu.astro
// Define the type of items as an array of strings
const { items = [] }: { items?: string[] } = Astro.props;
---

<div class="overflow-x-auto whitespace-nowrap flex space-x-4">
  {items.map(item => (
    <button class="min-w-max px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">
      {item}
    </button>
  ))}
</div>