---
import DefaultLayout from '@/f/layouts/DefaultLayout.astro'
import { messages } from "@/f/config/messageConfig";

const lang = (Astro.url.searchParams.get('lang') ?? 'ja') as 'en' | 'ja';
const texts = messages.commerceInfo[lang];
const pageText = messages.commercePage[lang];
---

<DefaultLayout title={pageText.title}>
  <section class="max-w-4xl mx-auto p-6 space-y-8">
    <h1 class="text-3xl font-bold text-center">{pageText.heading}</h1>
    <dl class="space-y-6">
      {texts.map((item) => (
        <div class="border-b pb-4">
          <dt class="text-lg font-semibold">{item.title}</dt>
          <dd class="mt-1 text-gray-700 whitespace-pre-line">{item.description}</dd>
        </div>
      ))}
    </dl>
  </section>
</DefaultLayout>