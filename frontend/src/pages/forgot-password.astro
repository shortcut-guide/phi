---
import { Icon } from 'astro-icon/components'
import LoginLayout from '@/f/layouts/LoginLayout.astro'
import { messages } from '@/f/config/messageConfig';

const lang = (Astro.url.searchParams.get('lang') ?? 'ja') as 'en' | 'ja';
const texts = messages.forgotPassword[lang];

---

<LoginLayout title={texts.title}>
  <section class="bg-neutral-100 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-8 flex flex-col gap-6">
      <div class="flex flex-col items-center gap-2">
        <Icon name="majesticons:lock-line" class="text-4xl text-secondary-500" />
        <h1 class="text-2xl font-bold">{texts.heading}</h1>
        <p class="text-neutral-600 text-center">
          {texts.description.split('\n').map((line, i) => (
            <>
              {i > 0 && <br />}
              {line}
            </>
          ))}
        </p>
      </div>
      <form id="forgot-form" class="flex flex-col gap-4">
        <label class="flex flex-col gap-1">
          <span class="font-semibold">{texts.email}</span>
          <input
            id="email"
            type="email"
            name="email"
            required
            class="border border-neutral-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-secondary-300"
            placeholder="you@example.com"
          />
        </label>
        <button
          type="submit"
          class="w-full bg-secondary-500 text-white font-semibold py-2 rounded hover:bg-secondary-600 transition"
        >
          {texts.send}
        </button>
      </form>
      <div class="text-center">
        <a href="/login" class="text-secondary-500 hover:underline">{texts.back}</a>
      </div>
    </div>
    <script type="module">
      const form = document.getElementById('forgot-form');
      form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        const email = document.getElementById('email').value;
        const res = await fetch('/api/auth/request-reset', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email }),
        });
        const data = await res.json();
        alert(data.message ?? '完了しました');
      });
    </script>
  </section>
</LoginLayout>