---
import DefaultLayout from '@/f/layouts/DefaultLayout.astro'
import { ProductCard } from '@/f/components/ProductCard';
import type { Product } from '@/f/types/product';
import { messages } from "@/f/config/messageConfig";
import { getLang } from "@/f/utils/lang";
const lang = getLang();
const t = messages.products[lang];
const apiUrl = import.meta.env.PUBLIC_API_BASE_URL;

let products = [];

try {
  const res = await fetch(`${apiUrl}/api/products`);
  if (!res.ok) {
    throw new Error(`APIエラー: ${res.status}\n`);
  }
  products = await res.json();
} catch (err) {
  console.error("🔥 API fetch 失敗:", err);
}
---

<DefaultLayout title={t.title}>
  <main class="max-w-3xl mx-auto px-4 py-12 text-neutral-800">
    <h1 class="text-2xl font-bold mb-6">{t.title}</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      {Array.isArray(products) && products.length > 0 ? (
        products.map((product: Product) => (
          <ProductCard {...product} lang={lang} />
        ))
      ) : (
        <p>商品の読込失敗</p>
      )}
    </div>
  </main>
</DefaultLayout>