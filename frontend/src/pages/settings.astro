---
import DefaultLayout from '@/f/layouts/DefaultLayout.astro'
import { messages } from "@/f/config/messageConfig";
import { useLang } from "@/f/utils/LangProvider";
const lang = useLang();
const t = messages.settings[lang];
---

<DefaultLayout title={t.title}>
  <section>
    <h1>{t.heading}</h1><br>
    <p class="size-20">{t.overview}</p>
  </section>
  <section class="margin-32">
    <div class="space-content">
      <div class="contents">
        <h2>{t.sectionTitle}</h2>
        <p>{t.sectionDescription}</p>
      </div>
    </div>
  </section>
</DefaultLayout>
