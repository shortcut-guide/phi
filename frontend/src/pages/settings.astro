---
import DefaultLayout from '@/f/layouts/DefaultLayout.astro'
import { messages } from '@/f/config/messageConfig';

const lang = (Astro.url.searchParams.get('lang') ?? 'ja') as 'en' | 'ja';
const settings = messages.settings[lang];
---

<DefaultLayout title={settings.title}>
  <section>
    <h1>{settings.heading}</h1><br>
    <p class="size-20">{settings.overview}</p>
  </section>
  <section class="margin-32">
    <div class="space-content">
      <div class="contents">
        <h2>{settings.sectionTitle}</h2>
        <p>{settings.sectionDescription}</p>
      </div>
    </div>
  </section>
</DefaultLayout>
