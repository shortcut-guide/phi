---
import { messages } from "@/f/config/messageConfig";
const lang = Astro.url.searchParams.get("lang") ?? "ja";
const t = messages.verifyPaypal[lang];
---

<html lang={lang}>
  <body>
    <section>
      <h1>{t.title}</h1>
      <p>{t.description}</p>
      <a href="/api/verify/paypal" class="btn">{t.button}</a>
    </section>
  </body>
</html>
