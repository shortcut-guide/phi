---
import { useState } from "preact/hooks";
import { tw } from "tw-astasy";

const [file, setFile] = useState(null);

const handleFileUpload = async () => {
    if (!file) return;

    const reader = new FileReader();
    reader.onload = async (event) => {
        const jsonData = JSON.parse(event.target.result);

        const res = await fetch("/api/puppeteer/upload", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ json_data: jsonData })
        });

        const result = await res.json();
        alert(result.message);
    };

    reader.readAsText(file);
};

const uploadContainer = tw`
  bg-white shadow-md p-6 rounded-md
`;
const inputStyle = tw`
  border border-gray-300 rounded p-2 w-full
`;
const buttonStyle = tw`
  bg-purple-500 text-white px-4 py-2 rounded hover:bg-purple-700 transition
`;
---

<html>
    <head>
        <title>JSONアップロード</title>
    </head>
    <body class="bg-gray-100 p-6">
        <h3 class="text-2xl font-bold mb-4 text-gray-800">JSONファイルをアップロード</h3>
        <div css={uploadContainer}>
            <input css={inputStyle} type="file" accept=".json" onInput={(e) => setFile(e.target.files[0])} />
            <button css={buttonStyle} onClick={handleFileUpload}>アップロード</button>
            <a href="/list" class="text-blue-500 hover:underline">リストへ</a>
        </div>
    </body>
</html>