---
// frontend/src/pages/help/index.astro
import FaqSection from "@/f/components/FaqSection";
import { messages } from "@/f/config/messageConfig";
const lang = "__MSG_LANG__";
const t = ((messages.login as any)[lang]) ?? {};
---

<html lang="ja">
  <head>
    <title>{t.title}</title>
  </head>
  <body>
    <main class="max-w-2xl mx-auto p-6">
      <h1 class="text-2xl font-bold mb-6">{t.title}</h1>
      <FaqSection client:load />
    </main>
  </body>
</html>
