---
import DefaultLayout from '@/f/layouts/DefaultLayout.astro';
import { getStaticPaths } from '@/f/utils/langs';
import { messages } from "@/f/config/messageConfig";
export { getStaticPaths }; 

const { lang } = Astro.params;
const t = ((messages.privacyPolicy as any)[lang]) ?? {};
---
<DefaultLayout title="Privacy-policy |Phis">
  <div>
    <h1 class="text-4xl font-bold">{t.heading}</h1>
    <p>{t.description}</p>
    {Object.entries(t.sections ?? {}).map(([key, section]) => {
      const s = section as any;
      return (
        <section>
          <h2 class="text-2xl font-semibold">{s.title}</h2>
          <p>{s.description}</p>
        </section>
      );
    })}
  </div>
</DefaultLayout> 