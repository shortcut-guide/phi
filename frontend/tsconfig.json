{
  "include": [
    "**/*"
  ],
  "exclude": [
    "public"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./public",
    "paths": {
      "@/f/*": [
        "./src/*"
      ],
      "@/b/*": [
        "../backend/src/*"
      ]
    },
    "types": [
      "astro/client",
      "astro/test"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "ts-node": {
    "esm": true
  }
}
