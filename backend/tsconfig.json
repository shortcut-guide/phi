{
  "include": ["src"],
  "exclude": ["node_modules","dist"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "baseUrl": ".",
    "outDir":"./dist",
    "rootDir":"./src",
    "paths":{
      "@/f/*": ["../frontend/src/*"],
      "@/b/*": ["./src/*"],
    }
  },
}