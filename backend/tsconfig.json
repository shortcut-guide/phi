{
    "include": ["src"],
    "exclude": ["node_modules","dist"],
    "compilerOptions": {
      "allowImportingTsExtensions": true,
      "outDir":"./dist",
      "rootDir":"./src",
      "typeRoots": ["./node_modules/@types", "./types"],
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    }
  }